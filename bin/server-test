#!/usr/bin/env ruby

require "bundler/setup"
require "pry"
require "jimmy"
require 'socket'

hostname = 'localhost'
port = 2000

server = TCPSocket.open(hostname, port)
if ARGV.count > 0
  server.write(ARGV.join(" "))
end
server.write("\nSIGNAL")

while line = server.gets
  puts line.chop
end
server.close
exit 10
